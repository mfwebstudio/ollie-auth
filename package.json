{
  "name": "ollie-auth",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn watch:css & react-scripts start",
    "build": "yarn build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "NODE_ENV=production postcss tailwind/tailwind.css -o src/styles/tailwind.css -w",
    "watch:css": "postcss tailwind/tailwind.css -o src/styles/tailwind.css -w",
    "format": "prettier --write ./",
    "type-check": "tsc -p ./tsconfig.json --pretty --noEmit"
  },
  "dependencies": {
    "cntl": "^1.0.0",
    "formik": "^2.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "typescript": "~3.7.2",
    "yup": "^0.29.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/ui": "^0.5.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "autoprefixer": "^9.8.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "husky": ">=4",
    "lint-staged": ">=10",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "purgecss": "^2.3.0",
    "tailwindcss": "^1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --no-stash",
      "pre-push": "yarn type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
